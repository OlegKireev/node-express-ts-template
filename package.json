  },
  "dependencies": {
    "bcrypt": "^5.1.0",
    "chalk": "4.1.2",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "husky": "^8.0.3",
    "mongoose": "^6.9.0",
    "morgan": "^1.10.0"
